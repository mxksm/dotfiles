sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# bsp or float (default: bsp)
yabai -m config layout bsp

# Override default layout for space 2 only
#yabai -m config --space 3 layout float

# Set all padding and gaps (default: 0)
yabai -m config top_padding    5
yabai -m config bottom_padding 5
yabai -m config left_padding   5
yabai -m config right_padding  5
yabai -m config window_gap     5

# center mouse on window with focus
yabai -m config mouse_follows_focus on

# floating windows are always on top (default: off)
yabai -m config window_topmost on
# yabai -m config window_shadow off

# yabai -m config active_window_border_topmost on
yabai -m config window_border on
yabai -m config window_border_width 3

yabai -m config active_window_border_color   0xff8E83B8
yabai -m config insert_window_border_color   0xff8E83B8
yabai -m config normal_window_border_color   0xff51425C

yabai -m config window_placement second_child

# global settings
#yabai -m config mouse_follows_focus          off
#yabai -m config focus_follows_mouse          autoraise

# floating windows are always on top (default: off)
yabai -m config window_topmost               on

# float system preferences
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add title="^About This Mac$" manage=off
yabai -m rule --add app="^About This Mac$" manage=off
yabai -m rule --add app="^Macs Fan Control$" manage=off
yabai -m rule --add app="^Mail$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^QuickTime Player$" manage=off
yabai -m rule --add app="^Photo Booth$" manage=off
yabai -m rule --add app="^UTM$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Books$" manage=off
yabai -m rule --add app="^Mousecape$" manage=off
yabai -m rule --add app="^Calendar$" manage=off
yabai -m rule --add app="^Terminal$" manage=off
yabai -m rule --add app="^MySFMLProject$" manage=off
yabai -m rule --add app="^Preview$" manage=off
yabai -m rule --add app="^Sitcky Notepad$" manage=off
yabai -m rule --add app="^mpv$" manage=off
yabai -m rule --add app="^Messages$" manage=off
yabai -m rule --add app="^Notes$" manage=off
yabai -m rule --add app="^python3$" manage=off

# Spacebar
# SPACEBAR_HEIGHT=$(spacebar -m config height)
# yabai -m config external_bar all:$SPACEBAR_HEIGHT:0
# yabai -m config external_bar all:35:0

yabai -m signal --add event=window_destroyed action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"
yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

HEIGHT=$(sketchybar --query bar | jq -r '.height')
Y_OFFSET=$(sketchybar --query bar | jq -r '.y_offset')
yabai -m config external_bar all:"$(($HEIGHT + $Y_OFFSET))":0
yabai -m signal --add event=window_focused action="sketchybar --trigger window_focus"

yabai -m config window_animation_duration    0.10
yabai -m config window_border_blur off

# mouse stuff
# yabai -m config mouse_modifier             cmd
# yabai -m config mouse_action1              move
# yabai -m config mouse_action2              resize
